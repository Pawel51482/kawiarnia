<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/special_offer_bg"
    android:padding="16dp"
    android:layout_marginTop="16dp">

    <TextView
        android:text="@string/special_for_you"
        style="@style/SpecialTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textCoffeeName"
        android:text="Hot Coffee"
        style="@style/SpecialSubtitle"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textSpecialPrice"
        android:text="$10.00"
        style="@style/SpecialPrice"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
